{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Etat index</h1>

        <div class="overflow-hidden rounded-lg shadow-lg border border-gray-200">
            <table class="min-w-full bg-white">
                <thead>
                <tr class="bg-gray-100 border-b">
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">Id</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">Libelle</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                {% for etat in etats %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 text-sm text-gray-700">{{ etat.id }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">{{ etat.libelle }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">
                            <a href="{{ path('app_etat_show', {'id': etat.id}) }}" class="text-blue-500 hover:text-blue-700 font-medium">Show</a>
                            <span class="mx-2">|</span>
                            <a href="{{ path('app_etat_edit', {'id': etat.id}) }}" class="text-green-500 hover:text-green-700 font-medium ml-4">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-4 py-2 text-center text-sm text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_etat_new') }}" class="bg-blue-600 text-white py-2 px-4 rounded shadow hover:bg-blue-700">
                Create new
            </a>
        </div>
    </div>
{% endblock %}
