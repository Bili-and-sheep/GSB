{{ form_start(form, { attr: { class: 'space-y-6' } }) }}
<div class="grid grid-cols-1 gap-4">
    {{ form_widget(form, {
        attr: {
            class: 'block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-700'
        }
    }) }}
</div>
