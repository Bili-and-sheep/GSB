{% extends 'base.html.twig' %}

{% block title %}FraisForfait{% endblock %}

{% block body %}
    <div class="container mx-auto mt-6 p-6 bg-white rounded-lg shadow">
        <h1 class="text-2xl font-semibold mb-4">FraisForfait Details</h1>

        <table class="table table-bordered w-full mb-4">
            <tbody>
            <tr>
                <th class="text-left p-2">Id</th>
                <td class="p-2">{{ frais_forfait.id }}</td>
            </tr>
            <tr>
                <th class="text-left p-2">Libelle</th>
                <td class="p-2">{{ frais_forfait.libelle }}</td>
            </tr>
            <tr>
                <th class="text-left p-2">Montant</th>
                <td class="p-2">{{ frais_forfait.montant }}</td>
            </tr>
            </tbody>
        </table>

        <div class="flex justify-end space-x-4">
            <a href="{{ path('app_frais_forfait_index') }}" class="text-blue-600 hover:underline">
                Back to list
            </a>
            <a href="{{ path('app_frais_forfait_edit', {'id': frais_forfait.id}) }}" class="text-yellow-600 hover:underline">
                Edit
            </a>
        </div>

        <div class="mt-4">
            {{ include('frais_forfait/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}