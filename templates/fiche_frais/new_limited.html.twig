{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">{{ controller_name }}</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-500 text-white p-4 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white shadow-md rounded-lg p-6 my-4 border border-gray-200">
            {{ form_start(formLFF) }}
            {{ form_widget(formLFF, {
                attr: {
                    class: 'space-y-4'
                }
            }) }}
            <button class="bg-blue-600 text-white py-2 px-4 my-2 block w-full rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Enregistrer
            </button>
            {{ form_end(formLFF) }}

            {{ form_start(formLFHF) }}
            <div class="space-y-4">
                {{ form_row(formLFHF.date) }}
                {{ form_row(formLFHF.libelle) }}

                    {{ form_label(formLFHF.montant, null, ) }}
                        {{ form_widget(formLFHF.montant, {
                            'attr': {
                                'placeholder': '0.00'
                            }
                        }) }}
                        <span>â‚¬</span>

            </div>

            <button class="bg-blue-600 text-white py-2 px-4 my-2 block w-full rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Enregistrer
            </button>
            {{ form_end(formLFHF) }}

            <div class="mt-6">
                <a href="{{ path('app_select_fiche') }}" class="inline-block bg-gray-600 text-white py-2 px-4 rounded shadow hover:bg-gray-700">
                    Retour
                </a>
            </div>
        </div>
    </div>
{% endblock %}
