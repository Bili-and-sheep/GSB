{% extends 'base.html.twig' %}

{% block title %}FicheFrais index{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">FicheFrais Index</h1>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="min-w-full table-auto">
                <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">Id</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">Mois</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">NbJustificatifs</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">MontantValid</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">DateModif</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for fiche_frai in fiche_frais %}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.id }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.mois ? fiche_frai.mois|date('Y-m-d') : '' }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.nbJustificatifs }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.montantValid }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.dateModif ? fiche_frai.dateModif|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="px-4 py-2 text-sm text-gray-700">
                            <a href="{{ path('app_fiche_frais_show', {'id': fiche_frai.id}) }}" class="text-blue-600 hover:text-blue-800">Show</a>
                            <span class="mx-2">|</span>
                            <a href="{{ path('app_fiche_frais_edit', {'id': fiche_frai.id}) }}" class="text-yellow-600 hover:text-yellow-800">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4 text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_fiche_frais_new') }}" class="inline-block bg-green-600 text-white py-2 px-4 rounded-lg shadow hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                Create new
            </a>
        </div>
    </div>
{% endblock %}
