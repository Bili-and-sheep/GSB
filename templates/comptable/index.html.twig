{% extends 'base.html.twig' %}

{% block title %}Fiche Frais Management{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Fiche Frais to Validate</h1>

        <div class="space-y-2">
            {% for fiche in ficheFrais %}
                <form method="get" action="{{ path('app_fiche_frais_show', { id: fiche.id }) }}">
                    <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                        {{ fiche.user.nom }} {{ fiche.user.prenom }} - {{ fiche.mois|date('Y-m-d') }}
                    </button>
                </form>
            {% else %}
                <p class="text-gray-500">No fiche frais to validate.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}